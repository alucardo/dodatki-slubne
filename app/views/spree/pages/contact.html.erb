<div class="row well-tab">
  <div class="col-sm-6">
    <div class="well">
      <h3>Formularz kontaktowy</h3>
      <%= simple_form_for @contact, url: contact_send_path, html: {class: "form-horizontal", style: "padding: 5px 15px;"} do |f| %>
      <% if @contact.errors.present? %>
        <div class="alert alert-danger" role="alert"><%= @contact.errors.full_messages.to_sentence %></div>
      <% end %>
      <div class="form-group">
        <%= f.input_field :title, placeholder: "Temat", class: "col-sm-12 form-control" %>
      </div>
      <div class="form-group">
        <%= f.input_field :email, placeholder: "Email zwrotny *", class: "col-sm-12 form-control" %>
      </div>
      <div class="form-group">
        <%= f.input_field :body, placeholder: "Treść *", class: "col-sm-12 form-control", style: "min-height: 150px;"%>
      </div>
      <div class="form-group">
        <div class="">
          <p>* pola wymagane</p>
          <%= f.submit "Wyślij", class: "btn btn-primary" %>          
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="well">
      <h3>Dane kontaktowe</h3>
      <ul class="icons" style="padding-left: 5px;">
          <li><i class="fa fa-envelope-o"></i> suknieslubnesosnowiec@gmail.com</li>
          <li><i class="fa fa-phone"></i> (+48) 603-177-820</li>
          <li><i class="fa fa-map-marker"></i> Sosnowiec, 3-go Maja 31</li>
          <li>Pn – Pt: 10:00 – 17:30</li>
          <li>Sb: 10:00 – 13:00</li>
      </ul>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1274.8176760587817!2d19.1319279!3d50.280066900000044!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4716dabd293afe21%3A0x174c25a0bea4d57c!2s3+Maja+31%2C+Sosnowiec!5e0!3m2!1spl!2spl!4v1419885548566"  frameborder="0" style="border:0; width: 100%; min-height: 200px;"></iframe>
    </div>
  </div>
</div>